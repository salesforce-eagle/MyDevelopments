<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Legal_Approval_Approved</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Legal_Approval_Rejection_Date</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>aishwarya.viswanathan@cleartax.in</name>
                <type>user</type>
            </approver>
            <approver>
                <name>ankit.jaiswal@cleartax.in</name>
                <type>user</type>
            </approver>
            <approver>
                <name>mahima.pradeep@cleartax.in</name>
                <type>user</type>
            </approver>
            <approver>
                <name>megha.agarwal@cleartax.in@cleartax.in</name>
                <type>user</type>
            </approver>
            <approver>
                <name>ramakanth.reddy@cleartax.in</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.Special_Terms__c</field>
                <operation>notEqual</operation>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>RejectRecord</ifCriteriaNotMet>
        <label>Legal Approval</label>
        <name>Legal_Approval</name>
        <rejectionActions>
            <action>
                <name>Legal_Approval_Rejected</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Legal_Approval_Rejection_Date</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <emailTemplate>unfiled$public/Finance_approval_template</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Opportunity.Special_Terms__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Order_Form_Required__c</field>
            <operation>equals</operation>
            <value>Yes</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Legal_Approval_Approved_Mail</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Legal_Approval_Rejection_Mail</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Legal_Approval_Assignment</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Legal_Approval_InProgress</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Legal Approval</label>
    <processOrder>2</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
