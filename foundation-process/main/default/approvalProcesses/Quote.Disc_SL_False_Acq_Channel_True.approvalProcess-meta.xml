<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Discount</field>
        <field>Account</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Opportunity_Owner_Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>Regional_Head__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>Max_Discount__c &lt;=0.15</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>0% - 15%</label>
        <name>X0_15</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Regional_Head__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>Max_Discount__c &gt; 0.15 &amp;&amp;  Max_Discount__c &lt;= 0.25</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>15% - 25%</label>
        <name>X15_25</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>ganesh.mallya@cleartax.in</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>Max_Discount__c &gt; 0.25 &amp;&amp;  Max_Discount__c &lt;= 0.40</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>25% - 40%</label>
        <name>X25_40</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>ganesh.mallya@cleartax.in</name>
                <type>user</type>
            </approver>
            <approver>
                <name>gowri@clear.in</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>Max_Discount__c &gt; 0.40</formula>
        </entryCriteria>
        <label>40%</label>
        <name>X40</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <emailTemplate>Notification_Email_Template_Folder/Quote_Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>!ISPICKVAL(Opportunity.Account.Strategic_Lead__c,&apos;Yes&apos;)  &amp;&amp; Subtotal &lt;= 500000 &amp;&amp;  !ISPICKVAL(Approval_sub_status__c,&apos;Discount Approved&apos;) &amp;&amp;  Opportunity.RecordType.DeveloperName != &apos;Renewal&apos; &amp;&amp; Opportunity.RecordType.DeveloperName != &apos;Renewal_Multi_year&apos; &amp;&amp;   Max_Discount__c &gt; 0  &amp;&amp; CONTAINS(Opportunity.Owner.Department , &apos;Channel&apos;)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Quote_Approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>update_on_status_when_approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>update_sub_status_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Quote_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>update_Status_to_previous_value</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>update_sub_status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>update_field_Approval_sub_status</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Disc SL False Acq Channel True</label>
    <processOrder>2</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
