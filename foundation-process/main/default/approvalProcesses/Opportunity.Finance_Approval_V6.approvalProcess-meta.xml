<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>StageName</field>
        <field>Finance_approval_status__c</field>
        <field>Reason_for_reject__c</field>
        <field>Amount__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Finance_Approval_Approved</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Approve_Rejection_Date</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>riya.prasad@cleartax.in</name>
                <type>user</type>
            </approver>
            <approver>
                <name>sangeetha.k@cleartax.in</name>
                <type>user</type>
            </approver>
            <approver>
                <name>shubham.chaturvedi@cleartax.in</name>
                <type>user</type>
            </approver>
            <approver>
                <name>sumeeth.vohra@cleartax.in</name>
                <type>user</type>
            </approver>
            <approver>
                <name>sumit.kawariya@cleartax.in</name>
                <type>user</type>
            </approver>
            <approver>
                <name>vinayak.mesta@cleartax.in</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.StageName</field>
                <operation>equals</operation>
                <value>In Finance Approval</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>RejectRecord</ifCriteriaNotMet>
        <label>Finance Approval</label>
        <name>Finance_Approval</name>
        <rejectionActions>
            <action>
                <name>Finance_Approval_Rejected</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Approve_Rejection_Date</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <emailTemplate>unfiled$public/Finance_approval_template</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <finalApprovalActions>
        <action>
            <name>Finance_Approval_Approved_Mail</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Finance_Rejection_Mail</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Finance_Approval_InProgress</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Reason_For_Reject_to_null</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Finance Approval V6</label>
    <processOrder>3</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
