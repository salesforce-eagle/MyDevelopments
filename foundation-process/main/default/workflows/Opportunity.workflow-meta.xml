    <rules>
        <fullName>Update StageName after In Finance Approvel</fullName>
        <actions>
            <name>Update_as_StageName_based_after_Approved</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>AND(
    RecordTypeId=&apos;0122x000000t7bGAAQ&apos;, 
    OR(
        AND(
            ISPICKVAL(Order_Form_Required__c, &apos;No&apos;),
            ISPICKVAL(Finance_approval_status__c,&apos;Finance Approval Approved&apos;)
        ),
        AND(
            ISPICKVAL(Order_Form_Required__c, &apos;Yes&apos;),
            ESign_Completed1__c &gt;= 1
        )
    )
)</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
