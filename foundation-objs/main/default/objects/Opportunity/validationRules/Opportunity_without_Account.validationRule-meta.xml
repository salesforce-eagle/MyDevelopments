<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Opportunity_without_Account</fullName>
    <active>true</active>
    <errorConditionFormula>ISNULL(AccountId) || ISBLANK(AccountId)</errorConditionFormula>
    <errorDisplayField>AccountId</errorDisplayField>
    <errorMessage>Opportunity cannot be created without Account.</errorMessage>
</ValidationRule>
