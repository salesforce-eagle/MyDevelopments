<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Finance_POC_Phone_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
NOT(ISBLANK( Finance_POC_For_Invoice_Processing_Phone__c )),
NOT(REGEX( Finance_POC_For_Invoice_Processing_Phone__c , &quot;[0-9]{10}&quot;))
)</errorConditionFormula>
    <errorMessage>Enter Valid Finance POC For Invoice Processing Phone Number</errorMessage>
</ValidationRule>
