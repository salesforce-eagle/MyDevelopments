<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PAN_should_be_6_digits</fullName>
    <active>true</active>
    <errorConditionFormula>AND(NOT(ISBLANK(PAN__c)), LEN( PAN__c ) &lt;&gt; 10 )</errorConditionFormula>
    <errorDisplayField>PAN__c</errorDisplayField>
    <errorMessage>Please Enter 10 characters in PAN</errorMessage>
</ValidationRule>
